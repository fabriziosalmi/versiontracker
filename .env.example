# GitHub Version Tracker - Environment Variables Configuration
# Copy this file to .env and fill in your values

# GitHub Personal Access Token (Recommended)
# Get one at: https://github.com/settings/tokens
# Required scopes:
#   - public_repo (for public repositories)
#   - repo (for private repositories)
# Without token: 60 requests/hour
# With token: 5,000 requests/hour
GITHUB_TOKEN=your_github_token_here

# Flask Configuration (for web app)
# Generate a secure key with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# If not set, a random key will be generated (sessions won't persist across restarts)
SECRET_KEY=

# Flask Debug Mode (Development only)
# Set to True for development, False for production
# Never set to True in production!
FLASK_DEBUG=False

# Proxy Configuration
# Set to True if running behind a reverse proxy (nginx, Apache, etc.)
BEHIND_PROXY=False

# Rate Limiting Storage (Optional)
# For production with multiple instances, use Redis
# Example: redis://localhost:6379
# Leave empty for in-memory storage (default)
RATE_LIMIT_STORAGE_URL=
